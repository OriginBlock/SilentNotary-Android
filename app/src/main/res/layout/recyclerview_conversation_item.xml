<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="item"
            type="com.silentnotary.api.retrofit.ConversationAPI.ChatBotConversationData" />
        <import type="android.view.View"/>
    </data>

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/recycler_view_files_item_padding"
                android:paddingLeft="@dimen/recycler_view_files_item_padding"
                android:paddingRight="@dimen/recycler_view_files_item_padding"
                android:paddingBottom="@dimen/recycler_view_files_item_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@{item.ChatBotType.equals(`Telegram`)? @drawable/ic_telegram : @drawable/ic_facebook}"
                    android:id="@+id/imageView3"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginRight="10dp"
                    />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_toRightOf="@+id/imageView3"
                    android:layout_toEndOf="@+id/imageView3">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.silentnotary.widget.textview.TextViewRegular
                                android:layout_weight="1.3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                tools:text="Subjecct"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="@{item.Subject}"
                                android:textColor="@color/black"
                                />

                            <com.silentnotary.widget.textview.TextViewRegularSmall
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                tools:text="2017-10-13 07:35"
                                android:textSize="14dp"
                                android:text="@{item.createdDateFormated}"
                                />
                        </LinearLayout>

                        <com.silentnotary.widget.textview.TextViewRegularSmall

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            tools:text="27.10.2017 0:00:00"
                            android:text='@{item.HashHex ?? "Not loaded yet"}'
                            android:singleLine="true"
                            android:ellipsize="middle"
                            />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
</layout>
